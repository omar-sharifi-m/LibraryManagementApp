{% extends 'dashboard/__layout.j2' %}
{% block body %}
    <div class="bg-white rounded-3xl p-8 shadow-sm border border-gray-100">
        <h2 class="text-xl font-bold text-gray-800 mb-6">
            ویرایش اطلاعات کاربری
        </h2>

        <form method="post" action="{{ url_for('update_profile') }}" class="space-y-6">

            <!-- نام -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    نام
                </label>
                <input
                        type="text"
                        name="first_name"
                        value="{{ profile.firstName if profile.lastName else '' }}"
                        class="w-full rounded-xl border border-gray-300 px-4 py-2 focus:ring-2 focus:ring-indigo-500 focus:outline-none"
                        placeholder="نام خود را وارد کنید"
                >
            </div>

            <!-- نام خانوادگی -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    نام خانوادگی
                </label>
                <input
                        type="text"
                        name="last_name"
                        value="{{ profile.lastName if profile.lastName else '' }}"
                        class="w-full rounded-xl border border-gray-300 px-4 py-2 focus:ring-2 focus:ring-indigo-500 focus:outline-none"
                        placeholder="نام خانوادگی"
                >
            </div>


            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                رمز
                </label>
                <input
                        type="text"
                        name="password"
                        class="w-full rounded-xl border border-gray-300 px-4 py-2 focus:ring-2 focus:ring-indigo-500 focus:outline-none"
                        placeholder=""
                >
            </div>


            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    شماره تماس
                </label>
                <input
                        type="text"
                        name="code_meli"
                        value="{{ profile.code_meli if profile.code_meli else '' }}"
                        class="w-full rounded-xl border border-gray-300 px-4 py-2 focus:ring-2 focus:ring-indigo-500 focus:outline-none"
                        placeholder=""
                >
            </div>

            <!-- دکمه‌ها -->
            <div class="flex justify-end gap-3 pt-4">
                <button
                        type="reset"
                        class="px-6 py-2 rounded-xl bg-gray-100 text-gray-700 hover:bg-gray-200 transition"
                >
                    انصراف
                </button>

                <button
                        type="submit"
                        class="px-6 py-2 rounded-xl bg-indigo-600 text-white hover:bg-indigo-700 transition"
                >
                    ذخیره تغییرات
                </button>
            </div>

        </form>
    </div>
{% endblock %}
