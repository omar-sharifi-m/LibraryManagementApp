{% extends 'admin/__layout.j2' %}
{% block body %}
    <div class="bg-white p-6  shadow-sm border border-gray-100 mb-8">
        <form method="GET" action="/admin/books" class="flex flex-wrap gap-4 items-end">

            <div class="flex-1 min-w-[250px]">
                <label class="block text-sm font-medium text-gray-700 mb-1">جستجوی کتاب یا نویسنده</label>
                <input type="text" name="q" value="{{ q if q }}" placeholder="نام کتاب..."
                       class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 p-2 border">
            </div>

            <div class="flex gap-2">
                <button type="submit"
                        class="bg-indigo-600 text-white px-6 py-2 rounded-lg hover:bg-indigo-700 transition-colors">
                    اعمال فیلتر
                </button>

            </div>
        </form>
    </div>


    <div class="container mx-auto px-4 py-8">
        <h1 class="text-2xl font-bold mb-6">لیست کتاب‌ها</h1>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            {% for book in books %}
                <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow border border-gray-100">
                    <img class="h-56 w-full object-cover" src="{{ url+ book.front_cover }}" alt="{{ book.title }}">

                    <div class="p-4">
                        <div class="flex justify-between items-start mb-2">
                            <h2 class="text-lg font-bold text-gray-800 leading-tight">{{ book.title }}</h2>
                            <span class="bg-indigo-100 text-indigo-700 text-xs px-2 py-1 rounded">
                        {{ book.total_copies }} نسخه
                    </span>
                        </div>
                        <p class="text-sm text-gray-600 mb-4">{{ book.author }}</p>

                        <div class="flex flex-wrap gap-1 mb-4">
                            {% for tag in book.tags %}
                                <span class="text-[10px] bg-gray-100 text-gray-500 px-2 py-0.5 rounded-full">
                        #{{ tag.title }}
                    </span>
                            {% endfor %}
                        </div>

                        <a href="{{ url_for("getBook",book_id = book.id) }}"
                           class="block text-center bg-gray-50 text-indigo-600 py-2 rounded-lg font-medium hover:bg-indigo-600 hover:text-white transition-colors">
                            مشاهده جزئیات
                        </a>
                    </div>
                </div>
            {% else %}
                <div class="col-span-full text-center py-10">
                    <p class="text-gray-500">هیچ کتابی یافت نشد.</p>
                </div>
            {% endfor %}
        </div>

        <div class="flex justify-center items-center space-x-reverse space-x-2 mt-12">

            {% if current_page > 1 %}
                <a href="?page={{ current_page - 1 }}&size={{ size }}{% if q %}&q={{ q }}{% endif %}"
                   class="flex items-center px-4 py-2 bg-white border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors">
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path d="M9 5l7 7-7 7"></path>
                    </svg>
                    قبلی
                </a>
            {% endif %}



                    <div class="flex items-center gap-1">
                        {% for p in range(1, total_pages + 1) %}
                            {% if p == current_page %}
                            <span class="w-10 h-10 flex items-center justify-center bg-indigo-600 text-white rounded-lg shadow-sm font-bold">
                                {{ p }}
                            </span>


                            {% elif p > current_page - 3 and p < current_page + 3 %}
                            <a href="?page={{ p }}&size={{ size }}{% if q %}&q={{ q }}{% endif %}"
                               class="w-10 h-10 flex items-center justify-center bg-white border border-gray-300 text-gray-700 rounded-lg hover:border-indigo-500 transition-all">
                                {{ p }}
                            </a>
                            {% endif %}
                        {% endfor %}
                    </div>

            {% if current_page < total_pages %}
                <a href="?page={{ current_page + 1 }}&size={{ size }}{% if q %}&q={{ q }}{% endif %}"
                   class="flex items-center px-4 py-2 bg-white border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors">
                    بعدی
                    <svg class="w-4 h-4 mr-2 rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path d="M9 5l7 7-7 7"></path>
                    </svg>
                </a>
            {% endif %}

        </div>
    </div>

{% endblock %}
