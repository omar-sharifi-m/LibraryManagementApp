{% extends 'admin/__layout.j2' %}
{% block body %}
    <div class="p-6">

        <!-- Card -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 max-w-4xl mx-auto">

            <!-- Header -->
            <div class="border-b px-6 py-4">
                <h3 class="text-lg font-bold text-gray-800">
                    ویرایش کتاب
                </h3>

            </div>

            <!-- Form -->
            <form action="{{ url_for('edit_book_post',book_id = book.id) }}" method="post" enctype="multipart/form-data" class="p-6 space-y-5">

                <!-- Row 1 -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    {{ input("text","عنوان کتاب","title",value = book.title) }}
                    {{ input("text","نویسنده","author",value= book.author) }}
                </div>

                <!-- Description -->
                {{ textArea("توضیحات","description",value = book.description) }}

                <!-- Row 2 -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    {{ input("number","تعداد","count",value =book.total_copies) }}
                    {{ input("file","جلد کتاب","cover") }}
                    {{ input("file","فایل PDF (اختیاری)","pdf") }}
                </div>

                <!-- Audio -->
                {{ input("file","فایل صوتی (اختیاری)","audio") }}


                <!-- Actions -->
                <div class="flex justify-end gap-3 pt-4 border-t">
                    <button
                            type="submit"
                            class="px-8 py-2 rounded-lg bg-indigo-600 text-white hover:bg-indigo-700">
                        ذخیره کتاب
                    </button>
                </div>

            </form>
        </div>
    </div>
{% endblock %}

